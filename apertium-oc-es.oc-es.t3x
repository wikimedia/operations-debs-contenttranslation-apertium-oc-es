      <rule comment="CHUNK: inf (canvia els inf que cal per ger)">
      <pattern>
        <pattern-item n="inf"/>
      </pattern>
      <action>
        <choose>
          <when>
            <test>
              <equal>
                <clip pos="0" part="canvi"/>
                <lit-tag v="canviam"/>
              </equal>
            </test>
            <let>
              <clip pos="1" part="temps"/>
              <lit-tag v="ger"/>
            </let>
          </when>
        </choose>
	<choose>
	  <when>
	    <test>
	      <equal>
		<clip pos="0" part="lema_vb"/>
		<lit-tag v="acabar"/>
	      </equal>
	    </test>
	    <let>
	      <clip pos="1" part="lem"/>
	      <lit v="acabar"/>
	    </let>
	  </when>
	  <when>
	    <test>
	      <and>
		<equal>
		  <clip pos="0" part="lema_vb"/>
		  <lit-tag v="estar"/>
		</equal>
		<equal>
		  <clip pos="1" part="lem"/>
		  <lit-tag v="ser"/>
		</equal>
	      </and>
	    </test>
	    <let>
	      <clip pos="1" part="lem"/>
	      <lit v="estar"/>
	    </let>
	    <let>
	      <clip pos="1" part="a_verb"/>
	      <lit-tag v="vblex"/>
	    </let>
	  </when>
	</choose>
        <out>
          <lu>
            <clip pos="1" part="whole"/>
          </lu>
        </out>
      </action>
    </rule>
    
