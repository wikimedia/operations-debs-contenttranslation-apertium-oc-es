    </rule>
    
   
       <rule comment="CHUNK: canvia el verb">
      <pattern>
	<pattern-item n="pro_verb"/>
      </pattern>
      <action>
	
	    <choose>
	      <when>
		<test>
		  <equal>
		    <clip pos="0" part="lema_vb"/>
		    <lit-tag v="acabar"/>
		  </equal>
		</test>
		<let>
		  <clip pos="2" part="lem"/>
		  <lit v="acabar"/>
		</let>
	      </when>
	      <when>
		<test>
		  <equal>
		    <clip pos="0" part="lema_vb"/>
		    <lit-tag v="estar"/>
		  </equal>
		</test>
		<let>
		  <clip pos="2" part="lem"/>
		  <lit v="estar"/>
		</let>
		<let>
		  <clip pos="2" part="a_verb"/>
		  <lit-tag v="vblex"/>
		</let>
	      </when>
	    </choose>
	    <out>
	      <lu>
		<clip pos="1" part="whole"/>
	      </lu>
	      <b pos="1"/>
	      <lu>
		<clip pos="2" part="whole"/>
	      </lu>
	    </out>
      </action>
    </rule>
    



